@model IEnumerable<Web.DBModels.Cliente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Lista de Clientes</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-lg btn-primary">Incluir Novo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>            
            <th class="text-center">
                @Html.DisplayName("Ação")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>            
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> <br />
                <a asp-action="Details" asp-route-id="@item.Id">Detalhar</a>
            </td>
        </tr>
}
    </tbody>
</table>
