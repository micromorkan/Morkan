@model Web.ViewModels.ServicoVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Lista de Serviços</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-lg btn-primary">Incluir Novo Serviço</a>
</p>
<form asp-action="Index" class="text-center">
    <div class="row">
        <div class="col-md-4 col-lg-3 offset-lg-3">
            <input asp-for="FiltroDataDe" class="form-control" type="date" />
        </div>
        <div class="d-none d-md-block">
            Até
        </div>
        <div class="d-sm-none" style="width: 100%">
            Até
        </div>
        <div class="col-md-4 col-lg-3">
            <input asp-for="FiltroDataAte" class="form-control" type="date" />
        </div>
    </div>
    <br />
    <p class="text-center">
        <input type="submit" value="Filtrar" class="btn btn-success" />
    </p>

</form>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Cliente")
            </th>
            <th>
                @Html.DisplayName("Data Serviço")
            </th>
            <th>
                @Html.DisplayName("Ação")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Servicos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nome)
                </td>
                <td>
                    @item.DataServico.ToShortDateString()
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> <br />
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhar</a> <br />
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
